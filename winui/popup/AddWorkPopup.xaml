<ContentDialog
    x:Class="winui.popup.AddWorkPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:winui.popup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   >


    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >

        <TextBlock Text="근무 추가" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="근무자 : " HorizontalAlignment="Left" FontSize="17"
                       Margin="30,20,0,0" Foreground="White"   FontWeight="Bold"    
                   />
        <Button x:Name="btnClose" Margin="225,-160,0,10" Background="Transparent" BorderBrush="Transparent" 
               Click="btnClose_Click">
            <SymbolIcon Symbol="Clear"/>
        </Button>
        <TextBlock x:Name="txtUser" Text="" Foreground="White" FontSize="17" FontWeight="Bold"
                       Margin="110,-23,0,0"/>
        <Button Name="btnStartWork" Margin="40,30,0,0" Height="40" Width="200" Click="btnStartWork_Click"/>
    
    </StackPanel>


</ContentDialog>
